pipeline {
    agent any

    tools {
        maven 'Maven3' // Maven installation name in Jenkins
        jdk 'JDK11'    // JDK installation name in Jenkins
    }

    triggers {
        // Nightly build at 2 AM
        cron('0 2 * * *')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/username/project.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }
    }
}
